<h2>
  <%= @user.full_name %>
  <%= link_to 'Logs', '#', class: 'btn btn-primary pull-right mrg-10' %>
  <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary pull-right mrg-10' %>
</h2>

<h3>
  Detail:
</h3>
<br>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>First Name:</strong>
  <%= @user.profile.try(:first_name) %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @user.profile.try(:last_name) %>
</p>

<p>
  <strong>DOB:</strong>
  <%= @user.profile.try(:formated_dob) %>
</p>

<% if @user.is_student? %>
  <h3>
    Faculty:
  </h3>
  <br>
  <p>
    <strong>Faculty Name</strong>
    <%= @user.faculty_name %>
  </p>
<% end %>